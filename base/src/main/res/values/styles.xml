<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <attr name="ttPopupMenuStyle" format="reference" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>
        <item name="colorAccent">@color/common_colorAccent</item>
    </style>

    <style name="AppTheme.BaseActivity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowBackground">@mipmap/bg_splash_loading</item>-->
        <item name="android:windowBackground">@color/common_splash_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.LockScreen">  <!--半透明效果对话框及activity(可做遮罩层)-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item> <!-- 模糊背景 背景阴影 -->
        <item name="android:windowAnimationStyle">@null</item>  <!-- 弹出或者进入时的动画效果 -->
        <item name="android:windowContentOverlay">@null</item> <!-- 对话框是否有遮盖 -->
        <item name="android:colorBackgroundCacheHint">@null</item>  <!-- 背景缓存颜色 -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.PlayVideoTheme">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogTitle">@null</item>
        <!--背景色,此处的背景色一定要设置为透明度背景色-->
        <!-- <item name="android:windowBackground">@android:color/transparent</item>-->
        <!--window Is Translucent 窗口是半透明的-->
        <item name="android:windowIsTranslucent">true</item>
        <!--window No Title窗口无标题-->
        <item name="android:windowNoTitle">true</item>

        <!--点击 dialog Activity 周围是否关闭弹窗 true 关闭（默认为true） false 为不关闭-->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--toolbar的标题颜色-->
    <style name="Toolbar.TitleTextColor" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <!--设置toolbar的主题  背景颜色 显示位置-->
    <style name="ToolbarPopupTheme" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:colorBackground">#FFFFFF</item>  <!-- 设置背景颜色-->
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <!--        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <!--        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
    </style>
    <!--自定义loadingProgressDialog-->
    <style name="CustomProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <!--Progress 主题-->
    <style name="ProgressDialogStyle" parent="@style/ProgressDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--自定义的圆角Dialog-->
    <style name="MyCircleDialog" parent="Theme.AppCompat.Dialog">
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--没有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景昏暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--Fab的主题设置-->
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_15</item>
        <item name="borderWidth">@dimen/dp_0</item>
        <item name="elevation">@dimen/dp_5</item>
        <item name="pressedTranslationZ">@dimen/dp_10</item>
        <item name="rippleColor">@android:color/white</item>
    </style>
    <!--文字大小设置-->
    <style name="TextApperance.Artist.Title" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <!-- 歌手详情页面中其专辑的布局-->
    <attr name="cardStyle" format="reference" />


    <!--toolbar的设置-->
    <style name="toolbar_title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="toolbar_subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">#eeeeee</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="music_time_seek_bar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@mipmap/music_icon_seekbar_thumb</item>
    </style>


    <!--      测试       -->

    <style name="AppTheme.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/colorTextContent</item>
    </style>

    <style name="AppTheme.Label.Title">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="AppTheme.Label.Description">
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">@dimen/dp_4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="AppTheme.Label.Layout">
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
    </style>

    <style name="AppTheme.Division">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0_5</item>
        <item name="android:dividerHeight">@dimen/dp_0_5</item>
        <item name="android:divider">@color/colorDivision</item>
        <item name="android:background">@color/colorDivision</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.CommonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.CommonBar.Panel">
        <!--<item name="android:paddingTop">@dimen/division_line</item>-->
        <!--<item name="android:paddingBottom">@dimen/division_line</item>-->
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/layerlist_test_background_panel</item>
    </style>

    <style name="AppTheme.CommonBar.PanelLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:background">@color/colorBackgroundDark</item>
    </style>

    <style name="AppTheme.CommonBar.Bar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_3</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <!--<item name="android:paddingTop">@dimen/dimenPaddingDiminutive</item>-->
        <!--<item name="android:paddingBottom">@dimen/dimenPaddingDiminutive</item>-->

        <item name="android:background">?android:attr/selectableItemBackground</item>
        <!--<item name="android:background">@drawable/af_selector_background_white</item>-->
    </style>

    <style name="AppTheme.CommonBar.Bar.Header">
        <item name="android:paddingTop">@dimen/dp_0</item>
        <item name="android:paddingBottom">@dimen/dp_0</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.CommonBar.Bar.Alone">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@drawable/layerlist_test_background_panel</item>
    </style>

    <style name="AppTheme.CommonBar.Content" parent="AppTheme.Label">
        <item name="android:singleLine">false</item>
        <!--<item name="android:layout_margin">@dimen/dimenPaddingDiminutive</item>-->
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:paddingTop">2dp</item>-->
        <!--<item name="android:paddingBottom">2dp</item>-->
        <!--<item name="android:paddingLeft">@dimen/dimenPaddingDiminutive</item>-->
        <!--<item name="android:paddingRight">@dimen/dimenPaddingCommon</item>-->
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
    </style>

    <style name="AppTheme.CommonBar.Content.Value">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.CommonBar.Value" parent="AppTheme.Label.Description">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextAssistant</item>
        <item name="android:gravity">right|end</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <!--<item name="android:layout_marginEnd">@dimen/dimenPaddingDiminutive</item>-->
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <!--      测试       -->


    <!--    测试桌面歌词用-->
    <!-- 为主色调 -->
    <style name="MyThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColor">@color/common_black</item>
        <item name="android:actionMenuTextColor">@color/common_black</item>


        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--    -->

</resources>
